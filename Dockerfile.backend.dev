FROM python:3.9-slim

WORKDIR /app

# Install system dependencies including PostgreSQL dev libraries
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    ca-certificates \
    procps \
    xvfb \
    postgresql-client \
    libpq-dev \
    gcc \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install Flask and development dependencies
RUN pip install flask flask-cors python-dotenv flask-sqlalchemy

# Create directory for browser data
RUN mkdir -p ./browser_data/vesteda

# Install playwright which will get the right browser for the architecture
RUN playwright install chromium

# Expose the Flask port
EXPOSE 5001

# Run Flask development server with hot reload
CMD ["flask", "run", "--host=0.0.0.0", "--port=5001"] 